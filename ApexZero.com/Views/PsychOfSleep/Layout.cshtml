    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Psychology of Sleep";    
}

@section _head {
    <script type="text/javascript" src="/Content/PsychOfSleep/scripts/jquery-1.4.1.min.js"></script>
    <script type="text/javascript" src="/Content/PsychOfSleep/scripts/jquery.easing.1.3.js"></script>
    <script type="text/javascript" src="/Content/PsychOfSleep/scripts/jquery.timers.1.2.js"></script>
    <script type="text/javascript" src="/Content/PsychOfSleep/scripts/jquery.galleryview.2.1.1.min.js"></script>
    <script type="text/javascript" src="/Content/PsychOfSleep/scripts/jquery.galleryview.setup.js"></script>
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
    <meta http-equiv="imagetoolbar" content="no" />
    @RenderSection("_head",required : false)
}
                    
@section menu {
    <li class="last">@Html.ActionLink("Home","Index","Home")</li>
    @RenderSection("menu",false)
}

@section body {    
    @RenderSection("bread_crumbs",false)
    <div class="wrapper">
        <div id="header">
            <div class="fl_left">
                @RenderSection("page_title",false)
            </div>
            <div class="fl_right"><a href="#"><img src="/Content/PsychOfSleep/images/ss1.png" alt="" /></a></div>
            <br class="clear" />
        </div>
    </div>
    <div class="wrapper col2">
        <div id="topbar">
            <div id="topnav">
                <ul>
                    @RenderSection("nav",false)
                </ul>
            </div>
            <div id="search">
                <form action="#" method="post">
                    <fieldset>
                        <legend>Site Search</legend>
                        <input type="text" value="Search Topics&hellip;" onfocus="this.value=(this.value=='Search Topics&hellip;')? '' : this.value ;" />
                        <input type="submit" name="go" id="go" value="Search" />
                    </fieldset>
                </form>
            </div>
            <br class="clear" />
        </div>
    </div>
    @RenderSection("inner_body", false)
}

